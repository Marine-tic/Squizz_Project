<Page
    x:Class="Squizz_Project.SignInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Squizz_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/Cloptrop.png"
                    Stretch="UniformToFill" />
        </Grid.Background>

        <TextBlock
            Text="Nouveau compte"  
            TextAlignment="Center"
            Foreground="Black" 
            FontSize="30"
            FontWeight="Bold" Margin="58,91,56,506"/>

        <TextBox x:ConnectionId='1' x:Name="txtUsername" 
                     PlaceholderText="Pseudo..."
                     Margin="46,231,40,377"
                     Background="#FF505050"
                     Foreground="White"
                     BorderBrush="#FF2B2B2B" FontSize="18"/>

        <TextBox x:ConnectionId='2' x:Name="txtMail" 
                     PlaceholderText="Email..."
                     Margin="46,279,40,329"
                     Background="#FF505050"
                     BorderBrush="#FF2B2B2B" FontSize="18"/>

        <PasswordBox x:ConnectionId='3' x:Name="txtPassword" 
                     PlaceholderText="Mot de passe..."
                     Margin="46,332,40,276"
                     Background="#FF505050"
                     BorderBrush="#FF2B2B2B" FontSize="18"/>


        <Button x:ConnectionId='4' x:Name="btnCreation" 
                Content="Création" 
                Foreground="White"
                FontSize="20"
                Background="#FF2B2B2B" 
                Margin="82,407,0,182" 
                Height="51" Width="210" 
                />

    </Grid>
</Page>

