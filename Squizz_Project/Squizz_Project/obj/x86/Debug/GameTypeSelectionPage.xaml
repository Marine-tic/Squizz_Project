<Page
    x:Class="Squizz_Project.GameTypeSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Squizz_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/Cloptrop.png"
                    Stretch="UniformToFill" />
        </Grid.Background>

        <TextBlock
            Text="Choisir le type de partie"  
            Foreground="Black" 
            FontSize="20"
            FontWeight="Bold" Margin="69,76,66,529"/>

        <Button x:ConnectionId='1' x:Name="Solo_Game" 
                Content="Solo" 
                Foreground="White"
                FontSize="20"
                Background="#FF2B2B2B" 
                Margin="104,194,0,395" 
                Height="51" Width="152" 
                />

        <Path Stroke="#FF2B2B2B" 
              StrokeThickness="3"
              Data="M 0,0 C 0,0 0,0 0,0 H 100"
              Margin="41.482,278.727,44.518,325.604" 
              UseLayoutRounding="False" 
              Stretch="Fill" />


        <TextBlock 
            Text="Activer le Bluetooth avec de créer ou rejoindre une partie"
            TextWrapping="Wrap"
            FontWeight="Bold"
            TextAlignment="Center"
            Foreground="Black" 
            FontSize="15"
            Margin="43,329,43,256"/>


        <Button x:ConnectionId='2' x:Name="Create_Game" 
                Content="Créer une partie" 
                Foreground="White"
                FontSize="20"
                Background="#FF2B2B2B" 
                Margin="75,411,0,178" 
                Height="51" Width="210" 
                />

        <Button x:ConnectionId='3' x:Name="Join_Game" 
                Content="Rejoindre une partie" 
                Foreground="White"
                FontSize="20"
                Background="#FF2B2B2B" 
                Margin="75,498,0,91" 
                Height="51" Width="210" 
                />

    </Grid>
</Page>

